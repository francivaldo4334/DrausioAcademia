<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".aluno.CadastrarAluno"
    android:background="@color/cor_clara">
    <LinearLayout
        android:id="@+id/lay_top_cadastro"
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar"
        android:background="@drawable/background_linear_to_donw"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center_vertical">
        <ImageView
            android:onClick="onIcBack"
            android:layout_width="@dimen/ic_size"
            android:layout_height="@dimen/ic_size"
            android:src="@drawable/ic_baseline_arrow_back_ios_24"
            android:padding="6dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cadastrar"
            android:textColor="@color/white"
            android:textSize="@dimen/font_big" />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/cmp_nm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/lay_top_cadastro"
        android:layout_marginTop="@dimen/margin_top_block"
        android:paddingHorizontal="@dimen/padding">
        <TextView
            android:id="@+id/txt_nome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_big"
            android:text="nome"
            android:layout_centerVertical="true"/>

        <EditText
            android:inputType="text"
            android:id="@+id/edt_nome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/txt_nome"
            android:maxLines="1" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/cmp_dt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/cmp_nm"
        android:layout_marginTop="@dimen/margin_top_block"
        android:paddingHorizontal="@dimen/padding">
        <TextView
            android:id="@+id/txt_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_big"
            android:text="data"
            android:layout_centerVertical="true"/>

        <EditText
            android:id="@+id/edt_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/txt_data"
            android:inputType="date"
            android:maxLines="1" />
    </RelativeLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_canselar_cadastro"
        android:onClick="onCanselarCadastro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_linear_to_donw"
        android:text="@string/cancel"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/cmp_dt"
        android:layout_marginTop="@dimen/margin_top_block"
        app:layout_constraintEnd_toStartOf="@id/btn_confirmar_cadastro"
        app:layout_constraintStart_toStartOf="parent"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_confirmar_cadastro"
        android:onClick="onConfirmarCadastro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_linear_to_donw"
        android:text="@string/yes"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/cmp_dt"
        android:layout_marginTop="@dimen/margin_top_block"
        app:layout_constraintStart_toEndOf="@id/btn_canselar_cadastro"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>