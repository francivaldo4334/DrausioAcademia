<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_height">

    <RelativeLayout
        android:id="@+id/lay_mes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_item"
        android:paddingHorizontal="@dimen/padding"
        android:paddingVertical="5dp">

        <TextView
            android:id="@+id/name_aluno_user_mes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="nome"
            android:textColor="@color/black"
            android:textSize="@dimen/font_medil" />

        <TextView
            android:id="@+id/date_aluno_init_user_mes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:text="date"
            android:textSize="@dimen/font_medil" />

        <TextView
            android:id="@+id/date_aluno_check_user_mes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/ic_checked_user_mes"
            android:text="date"
            android:textSize="@dimen/font_medil" />

        <CheckBox
            android:id="@+id/ic_checked_user_mes"
            android:layout_width="@dimen/ic_size"
            android:layout_height="@dimen/ic_size"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:button="@drawable/checkbox_custom" />
    </RelativeLayout>
</RelativeLayout>