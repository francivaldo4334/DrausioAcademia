<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".aluno.Alunos"
    android:background="@color/cor_clara">
    <LinearLayout
        android:id="@+id/lay_top_alunos"
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar"
        android:background="@drawable/background_linear_to_donw"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center_vertical">
        <ImageView
            android:onClick="onIcBack"
            android:layout_width="@dimen/ic_size"
            android:layout_height="@dimen/ic_size"
            android:src="@drawable/ic_baseline_arrow_back_ios_24"
            android:padding="6dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alunos"
            android:textColor="@color/white"
            android:textSize="@dimen/font_big"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_search"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ic_size"
        app:layout_constraintTop_toBottomOf="@id/lay_top_alunos"
        android:orientation="horizontal"
        android:layout_marginHorizontal="@dimen/padding"
        android:layout_marginTop="@dimen/margin_top_block"
        android:paddingEnd="@dimen/padding"
        android:background="@drawable/search_shape">
        <ImageView
            android:id="@+id/ic_search"
            android:layout_width="@dimen/ic_size"
            android:layout_height="@dimen/ic_size"
            android:src="@drawable/ic_search"/>

        <EditText
            android:inputType="text"
            android:id="@+id/edt_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/ic_search"
            android:gravity="center_vertical" />
    </RelativeLayout>
    <TextView
        android:id="@+id/alertofsearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sem resultados de pesquisa !"
        android:textSize="@dimen/font_smoll"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rl_search"
        android:layout_marginTop="@dimen/ic_size"
        android:visibility="invisible"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="120dp"
        android:id="@+id/list_alunos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@id/rl_search"/>
</androidx.constraintlayout.widget.ConstraintLayout>