<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ficha.ActivityTreinos"
    android:background="@color/white">
    <LinearLayout
        android:id="@+id/lay_top_alunos_edt_t"
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar"
        android:background="@drawable/background_linear_to_donw"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center_vertical">
        <ImageView
            android:onClick="onIcBack"
            android:layout_width="@dimen/ic_size"
            android:layout_height="@dimen/ic_size"
            android:src="@drawable/ic_baseline_arrow_back_ios_24"
            android:padding="6dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Editar Treino"
            android:textColor="@color/white"
            android:textSize="@dimen/font_big"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/action_bar">
        <LinearLayout
            android:id="@+id/block_treino_ficha_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="20dp">
            <LinearLayout
                android:id="@+id/treino_1"
                android:layout_marginVertical="10dp"
                android:background="@color/gray"
                android:layout_width="match_parent"
                android:layout_height="@dimen/scroll_size"
                android:orientation="horizontal"
                android:gravity="center"
                android:onClick="onActivityTreino">
                <TextView
                    android:layout_width="@dimen/cmp_1"
                    android:layout_height="wrap_content"
                    android:text="Peito"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_big"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/treino_2"
                android:onClick="onActivityTreino"
                android:layout_marginVertical="10dp"
                android:background="@color/gray"
                android:layout_width="match_parent"
                android:layout_height="@dimen/scroll_size"
                android:orientation="horizontal"
                android:gravity="center">
                <TextView
                    android:layout_width="@dimen/cmp_1"
                    android:layout_height="wrap_content"
                    android:text="Costas"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_big"
                    android:textStyle="bold"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/treino_3"
                android:onClick="onActivityTreino"
                android:layout_marginVertical="10dp"
                android:background="@color/gray"
                android:layout_width="match_parent"
                android:layout_height="@dimen/scroll_size"
                android:orientation="horizontal"
                android:gravity="center">
                <TextView
                    android:layout_width="@dimen/cmp_1"
                    android:layout_height="wrap_content"
                    android:text="Bíceps"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_big"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/treino_4"
                android:onClick="onActivityTreino"
                android:layout_marginVertical="10dp"
                android:background="@color/gray"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="@dimen/scroll_size"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="@dimen/cmp_1"
                    android:layout_height="wrap_content"
                    android:text="Ante\nBraço"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_big"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/treino_5"
                android:onClick="onActivityTreino"
                android:layout_marginVertical="10dp"
                android:background="@color/gray"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="@dimen/scroll_size"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="@dimen/cmp_1"
                    android:layout_height="wrap_content"
                    android:text="Pernas"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_big"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/treino_6"
                android:onClick="onActivityTreino"
                android:layout_marginVertical="10dp"
                android:background="@color/gray"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="@dimen/scroll_size"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="@dimen/cmp_1"
                    android:layout_height="wrap_content"
                    android:text="Ombros"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_big"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/treino_7"
                android:onClick="onActivityTreino"
                android:layout_marginVertical="10dp"
                android:background="@color/gray"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="@dimen/scroll_size"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="@dimen/cmp_1"
                    android:layout_height="wrap_content"
                    android:text="Tríceps"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_big"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/treino_8"
                android:onClick="onActivityTreino"
                android:layout_marginVertical="10dp"
                android:background="@color/gray"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="@dimen/scroll_size"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="@dimen/cmp_1"
                    android:layout_height="wrap_content"
                    android:text="Abdomen\npara\nVertebras"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_big"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/treino_9"
                android:onClick="onActivityTreino"
                android:layout_marginVertical="10dp"
                android:background="@color/gray"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="@dimen/scroll_size"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="@dimen/cmp_1"
                    android:layout_height="wrap_content"
                    android:text="Coxa e\nGlúteos"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_big"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>